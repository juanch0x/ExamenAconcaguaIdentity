@model ExamenAconcagua.ViewModels.Solicitante.NuevoSolicitanteViewModel
@{
    ViewData["Title"] = "NuevoSolicitante";
}

<style>
    .input-validation-error{
        border-color: #dc3545;
    }

    .field-validation-error {
        display:block;
        width: 100%;
        margin-top: .25rem;
        font-size: 80%;
        color: #dc3545;
    }

</style>

<h1>Añadir un nuevo solicitante</h1>

<form asp-controller="Solicitante" asp-action="NuevoSolicitante" method="post" role="form" class="needs-validation">

    <div class="form-group">
        <label asp-for="Dni"></label>
        <input asp-for="Dni" class="form-control"/>        
        <span asp-validation-for="Dni"></span>        
    </div>
    
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PrimerApellido"></label>
        <input asp-for="PrimerApellido" class="form-control"/>
        <span asp-validation-for="PrimerApellido"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="SegundoApellido"></label>
        <input asp-for="SegundoApellido" class="form-control"/>
        <span asp-validation-for="SegundoApellido"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="TelefonoFijo"></label>
        <input asp-for="TelefonoFijo" class="form-control"/>
        <span asp-validation-for="TelefonoFijo"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="TelefonoMovil"></label>
        <input asp-for="TelefonoMovil" class="form-control"/>
        <span asp-validation-for="TelefonoMovil"></span>
    </div>   


    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Guardar"/>
    </div>

</form>
